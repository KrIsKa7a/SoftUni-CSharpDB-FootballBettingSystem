@page
@model P03_FootballBetting.Web.Pages.Team.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Color[0].Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Color) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ColorId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ColorId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ColorId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
